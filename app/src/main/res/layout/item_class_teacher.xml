<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nombre de la clase -->
        <TextView
            android:id="@+id/tvClassNameTeacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de la clase"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:fontFamily="@font/josefin_sans_regular"
            android:layout_marginBottom="4dp" />

        <!-- Horario de la clase -->
        <TextView
            android:id="@+id/tvHourTeacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/josefin_sans_regular"
            android:text="Hora de la clase"
            android:textColor="#757575"
            android:textSize="14sp" />

        <!-- Comentario-->
        <TextView
            android:id="@+id/tvCommentTeacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comentario de la clase"
            android:textSize="14sp"
            android:textColor="#757575"
            android:fontFamily="@font/josefin_sans_regular"
            android:layout_marginBottom="16dp" />

        <!-- Contenedor horizontal para los 3 botones -->
        <LinearLayout
            android:id="@+id/buttonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnQRTeacher"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:backgroundTint="@null"
                android:background="@drawable/rounded_teal_button"
                android:text="QR"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:fontFamily="@font/josefin_sans_regular"
                android:paddingVertical="10dp"
                android:maxLines="1"
                android:ellipsize="end" />

            <Button
                android:id="@+id/btnGradesTeacher"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:backgroundTint="@null"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_teal_button"
                android:text="Grades"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:fontFamily="@font/josefin_sans_regular"
                android:paddingVertical="10dp"
                android:maxLines="1"
                android:ellipsize="end" />

            <Button
                android:id="@+id/btnAssistanceTeacher"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:backgroundTint="@null"
                android:background="@drawable/rounded_teal_button"
                android:text="Assistance"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:fontFamily="@font/josefin_sans_regular"
                android:paddingVertical="10dp"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

